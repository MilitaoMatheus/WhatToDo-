        <TextView
            android:id="@+id/txtLivros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Livros"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgGabarito"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:onClick="Gabaritos"
            app:srcCompat="@drawable/gabarito" />

        <TextView
            android:id="@+id/txtGabarito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Gabaritos"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgVideos"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:onClick="Videos"
            app:srcCompat="@drawable/videos" />

        <TextView
            android:id="@+id/txtVideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Videos"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp" />
